<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewDetailNgo1Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW DETAIL NGO"
        android:background="#FFEB3B"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ngo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/a1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ngoname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaysia Red Crescent Society"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="secgen@redcrescent.org.my
                                 \n+603-2142 8122
                                 \nLot PT54, Lengkok Belfield,
                                 \nOff Jalan Wisma Putra,
                                 \n50460 Kuala Lumpur" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of donation provided:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  Dry foods"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
        android:text="📌️  Hygiene kits"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  Portable water"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  Provide medicines and first aid kit"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  Ambulance services"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  Blankets"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  Powerbank"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="📌️  House Cleaning"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

    <Button

        android:id="@+id/requestDonationbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST DONATION"
        android:textColor="@color/black"
        android:backgroundTint="#FFEB3B"
        android:layout_margin="10dp"
       android:layout_gravity="center"/>

</LinearLayout>

    </LinearLayout>


